<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<AnchorPane prefHeight="300.0" prefWidth="490.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.deyal.deyal_app.controllers.ChangePasswordController">
    <children>
        <Pane layoutX="60.0" layoutY="49.0">
            <children>
                <Label layoutY="12.0" text="Current Password:"/>
                <PasswordField fx:id="oldPasswordField" layoutX="109.0" prefHeight="40.0" prefWidth="250.0"
                               promptText="Enter your current password"/>
                <Label layoutY="67.0" text="New Password:"/>
                <PasswordField fx:id="newPasswordField" layoutX="109.0" layoutY="55.0" prefHeight="40.0"
                               prefWidth="250.0"
                               promptText="Enter your new password"/>
                <Label layoutY="122.0" text="Confirm Password:"/>
                <PasswordField fx:id="newAgainPasswordField" layoutX="109.0" layoutY="110.0" prefHeight="40.0"
                               prefWidth="250.0"
                               promptText="Confirm your new password"/>
                <Button fx:id="submitButton" layoutX="200.0" layoutY="190.0" mnemonicParsing="false"
                        onAction="#handleSubmitButtonAction" prefHeight="30.0" prefWidth="70.0"
                        text="Submit"/>
                <Button fx:id="cancelButton" layoutX="300.0" layoutY="190.0" mnemonicParsing="false"
                        onAction="#handleCancelButtonAction" prefHeight="30.0" prefWidth="70.0"
                        text="Cancel"/>
            </children>
        </Pane>
    </children>
</AnchorPane>
