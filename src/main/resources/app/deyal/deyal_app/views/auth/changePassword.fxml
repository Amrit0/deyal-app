<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox alignment="CENTER" spacing="35.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.deyal.deyal_app.controllers.ChangePasswordController">
    <children>
        <HBox spacing="10.0">
            <children>
                <FontAwesomeIconView glyphName="EXPEDITEDSSL" size="40.0"/>
                <JFXPasswordField fx:id="oldPasswordField" labelFloat="true" prefHeight="40.0" prefWidth="250.0"
                                  promptText="Current password">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </JFXPasswordField>
            </children>
        </HBox>
        <HBox spacing="10.0">
            <children>
                <FontAwesomeIconView glyphName="EXPEDITEDSSL" size="40.0"/>
                <JFXPasswordField fx:id="newPasswordField" labelFloat="true" prefHeight="40.0" prefWidth="250.0"
                                  promptText="New password">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </JFXPasswordField>
            </children>
        </HBox>
        <HBox spacing="10.0">
            <children>
                <FontAwesomeIconView glyphName="EXPEDITEDSSL" size="40.0"/>
                <JFXPasswordField fx:id="newPasswordRepeatField" labelFloat="true" prefHeight="40.0" prefWidth="250.0"
                                  promptText="Re-enter new password">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </JFXPasswordField>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="75.0">
            <children>
                <JFXButton fx:id="submitButton" buttonType="RAISED" defaultButton="true"
                           onAction="#handleSubmitButtonAction" prefHeight="40.0" prefWidth="100.0"
                           style="-fx-background-color: blue;" text="Change" textFill="WHITE">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </JFXButton>
                <JFXButton fx:id="cancelButton" buttonType="RAISED" cancelButton="true"
                           onAction="#handleCancelButtonAction" prefHeight="40.0" prefWidth="100.0"
                           style="-fx-background-color: blue;" text="Close" textFill="WHITE">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </JFXButton>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>
</VBox>
