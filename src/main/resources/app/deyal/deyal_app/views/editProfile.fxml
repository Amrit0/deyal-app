<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.deyal.deyal_app.controllers.EditProfile">
    <children>
        <VBox alignment="CENTER" layoutX="21.0" layoutY="14.0" spacing="20.0">
            <children>
                <GridPane alignment="CENTER_LEFT" hgap="15.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="User Name"/>
                        <TextField fx:id="userNameTextField" editable="false" prefHeight="40.0" prefWidth="300.0"
                                   promptText="Enter Your Full Name" GridPane.columnIndex="1"/>
                        <Label text="Full Name" GridPane.rowIndex="1"/>
                        <TextField fx:id="fullNameTextField" editable="false" prefHeight="40.0" prefWidth="300.0"
                                   promptText="Enter Your Full Name" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Label text="Mobile Number" GridPane.rowIndex="2"/>
                        <TextField fx:id="phoneNumberTextField" editable="false" prefHeight="40.0" prefWidth="300.0"
                                   promptText="Enter Your Mobile Number" GridPane.columnIndex="1"
                                   GridPane.rowIndex="2"/>
                        <Label text="Date of Birth" GridPane.rowIndex="3"/>
                        <DatePicker fx:id="birthDatePicker" editable="false" prefHeight="40.0" prefWidth="300.0"
                                    promptText="Pick Your Date of Birth" GridPane.columnIndex="1"
                                    GridPane.rowIndex="3"/>
                        <Label text="House Address" GridPane.rowIndex="4"/>
                        <TextField fx:id="houseAddressTextField" editable="false" prefHeight="40.0" prefWidth="250.0"
                                   promptText="Enter Your House Address" GridPane.columnIndex="1"
                                   GridPane.rowIndex="4"/>
                        <Label text="Block Address" GridPane.rowIndex="5"/>
                        <TextField fx:id="blockAddressTextField" editable="false" prefHeight="40.0" prefWidth="250.0"
                                   promptText="Enter Your Block/Road Address" GridPane.columnIndex="1"
                                   GridPane.rowIndex="5"/>
                        <Label text="District" GridPane.rowIndex="6"/>
                        <TextField fx:id="districtTextField" editable="false" prefHeight="40.0" prefWidth="250.0"
                                   promptText="Enter Your District" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                        <Label text="Police Station" GridPane.rowIndex="7"/>
                        <TextField fx:id="policeStationTextField" editable="false" prefHeight="40.0" prefWidth="250.0"
                                   promptText="Enter Your Police Station" GridPane.columnIndex="1"
                                   GridPane.rowIndex="7"/>
                        <Label text="Post-Office" GridPane.rowIndex="8"/>
                        <TextField fx:id="postOfficeTextField" editable="false" prefHeight="40.0" prefWidth="250.0"
                                   promptText="Enter Your Post-Office Number" GridPane.columnIndex="1"
                                   GridPane.rowIndex="8"/>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </GridPane>
                <HBox alignment="CENTER" spacing="100.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleSaveButtonAction"
                                prefHeight="40.0" prefWidth="75.0" text="Save"/>
                        <Button cancelButton="true" mnemonicParsing="false"
                                onAction="#handleCancelButtonAction" prefHeight="40.0" prefWidth="75.0" text="Cancel"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</AnchorPane>
