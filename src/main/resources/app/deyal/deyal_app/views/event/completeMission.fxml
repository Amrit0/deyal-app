<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="35" styleClass="root"
      xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.deyal.deyal_app.controllers.CompleteMissionController">
    <children>
        <HBox alignment="CENTER" spacing="10.0">
            <Label text="Got your rewards from client?" styleClass="label-view"/>
            <JFXComboBox fx:id="gotRewardChoiceBox" promptText="Yes/No" prefWidth="100.0"/>
        </HBox>
        <VBox alignment="CENTER" spacing="35.0">
            <Label text="Enter a review" styleClass="label-title"/>
            <JFXTextArea fx:id="messageTextArea" prefHeight="150.0" prefWidth="350.0"
                         promptText="Say how this mission was, how client behaved and if you are satisfied or not."/>
            <JFXButton mnemonicParsing="false" defaultButton="true" onAction="#handleCompleteButtonAction"
                       prefHeight="25.0" prefWidth="150.0" text="Complete"/>
        </VBox>
    </children>
    <padding>
        <Insets bottom="35.0" left="35.0" right="35.0" top="35.0"/>
    </padding>
</VBox>

