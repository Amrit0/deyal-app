<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<SplitPane dividerPositions="0.1640625" orientation="VERTICAL" prefHeight="250.0" prefWidth="370.0"
           xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="app.deyal.deyal_app.controllers.RequestMessageController">
    <VBox alignment="CENTER">
        <Label text="Enter a message to client">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
    </VBox>
    <VBox alignment="CENTER" spacing="10.0">
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
        <TextArea fx:id="messageTextArea" prefHeight="150.0" prefWidth="350.0"
                  promptText="Include your qualification, reason to choose you etc. to help the client decide in your favor"/>
        <Button mnemonicParsing="false" onAction="#handleSendButtonAction" prefHeight="25.0" prefWidth="70.0"
                text="Send"/>
    </VBox>
</SplitPane>
