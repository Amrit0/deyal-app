<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<SplitPane dividerPositions="0.05" orientation="VERTICAL" xmlns="http://javafx.com/javafx/8.0.171"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.deyal.deyal_app.controllers.ViewMissionController">
    <items>
        <HBox alignment="CENTER">
            <children>
                <Label fx:id="missionTitleLabel" alignment="CENTER" text="Mission Name">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
            </children>
        </HBox>
        <VBox alignment="TOP_CENTER" spacing="30.0">
            <children>
                <JFXTextArea fx:id="shortDescriptionTextArea" editable="false" labelFloat="true" prefHeight="100.0"
                             prefWidth="500.0" promptText="Short description">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </JFXTextArea>
                <JFXTextArea fx:id="detailsTextArea" editable="false" labelFloat="true" prefHeight="150.0"
                             prefWidth="500.0" promptText="Detailed description">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </JFXTextArea>
                <Pane>
                    <children>
                        <GridPane hgap="20.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="Difficulty Level:">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="levelLabel" prefHeight="40.0" prefWidth="360.0" GridPane.columnIndex="1">
                                    <font>
                                        <Font name="System Bold" size="14.0"/>
                                    </font>
                                </Label>
                                <Label text="Creator:" GridPane.rowIndex="1">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="creatorLabel" onMouseClicked="#showCreatorProfileAction" prefHeight="40.0"
                                       prefWidth="360.0" underline="true" GridPane.columnIndex="1"
                                       GridPane.rowIndex="1">
                                    <font>
                                        <Font name="System Bold" size="14.0"/>
                                    </font>
                                </Label>
                                <Label text="Contractor:" GridPane.rowIndex="2">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="contractorLabel" onMouseClicked="#showContractorProfileAction"
                                       prefHeight="40.0" prefWidth="360.0" underline="true" GridPane.columnIndex="1"
                                       GridPane.rowIndex="2">
                                    <font>
                                        <Font name="System Bold" size="14.0"/>
                                    </font>
                                </Label>
                            </children>
                        </GridPane>
                    </children>
                </Pane>
                <JFXTextArea fx:id="eventsTextArea" editable="false" labelFloat="true" prefHeight="150.0"
                             prefWidth="500.0" promptText="Mission events">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </JFXTextArea>
                <HBox alignment="CENTER" spacing="150.0">
                    <children>
                        <JFXButton fx:id="acceptButton" buttonType="RAISED" onAction="#handleAcceptButtonAction"
                                   prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: blue;" text="Accept"
                                   textFill="WHITE">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </JFXButton>
                        <JFXButton buttonType="RAISED" onAction="#handleCancelButtonAction" prefHeight="50.0"
                                   prefWidth="150.0" style="-fx-background-color: blue;" text="Close" textFill="WHITE">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </JFXButton>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0"/>
            </padding>
        </VBox>
    </items>
</SplitPane>
