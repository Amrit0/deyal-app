<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<SplitPane dividerPositions="0.05" orientation="VERTICAL" styleClass="root" xmlns="http://javafx.com/javafx/8.0.171"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.deyal.deyal_app.controllers.ViewMissionController">
    <items>
        <HBox alignment="CENTER">
            <Label fx:id="missionTitleLabel" alignment="CENTER" text="Mission Name" styleClass="label-title"/>
        </HBox>
        <VBox alignment="TOP_CENTER" spacing="30.0">
            <children>
                <JFXTextArea fx:id="shortDescriptionTextArea" editable="false" labelFloat="true" prefHeight="100.0"
                             prefWidth="500.0" promptText="Short description"/>
                <JFXTextArea fx:id="detailsTextArea" editable="false" labelFloat="true" prefHeight="150.0"
                             prefWidth="500.0" promptText="Detailed description"/>
                <Pane>
                    <GridPane hgap="20.0" vgap="10.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <children>
                            <Label text="Difficulty Level:" styleClass="label-view"/>
                            <Label fx:id="levelLabel" prefHeight="40.0" prefWidth="360.0" styleClass="label-view"
                                   GridPane.columnIndex="1"/>
                            <Label text="Creator:" GridPane.rowIndex="1" styleClass="label-view"/>
                            <Label fx:id="creatorLabel" onMouseClicked="#showCreatorProfileAction" prefHeight="40.0"
                                   prefWidth="360.0" underline="true" styleClass="label-view"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                            <Label text="Contractor:" GridPane.rowIndex="2" styleClass="label-view"/>
                            <Label fx:id="contractorLabel" onMouseClicked="#showContractorProfileAction"
                                   prefHeight="40.0" prefWidth="360.0" underline="true" styleClass="label-view"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        </children>
                    </GridPane>
                </Pane>
                <JFXTextArea fx:id="eventsTextArea" editable="false" labelFloat="true" prefHeight="150.0"
                             prefWidth="500.0" promptText="Mission events"/>
                <HBox alignment="CENTER" spacing="150.0">
                    <JFXButton fx:id="acceptButton" buttonType="RAISED" onAction="#handleAcceptButtonAction"
                               prefHeight="50.0" prefWidth="150.0" text="Accept"/>
                    <JFXButton buttonType="RAISED" onAction="#handleCancelButtonAction" prefHeight="50.0"
                               prefWidth="150.0" text="Close"/>
                </HBox>
            </children>
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0"/>
            </padding>
        </VBox>
    </items>
</SplitPane>
