<?xml version="1.0" encoding="UTF-8"?>


<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.*?>
<SplitPane dividerPositions="0.08" orientation="VERTICAL" xmlns="http://javafx.com/javafx/8.0.171"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.deyal.deyal_app.controllers.CreateMissionController">
    <items>
        <HBox alignment="CENTER">
            <children>
                <Label alignment="CENTER" text="Create Mission">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
            </children>
        </HBox>
        <VBox alignment="TOP_CENTER" spacing="40.0">
            <children>
                <JFXTextField fx:id="titleTextField" labelFloat="true" prefHeight="40.0" promptText="Title">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </JFXTextField>
                <JFXTextArea fx:id="shortDescriptionTextArea" labelFloat="true" prefHeight="100.0" prefWidth="500.0"
                             promptText="Short description">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </JFXTextArea>
                <JFXTextArea fx:id="detailsTextArea" labelFloat="true" prefHeight="150.0" prefWidth="500.0"
                             promptText="Detailed description"
                             text="Description:&#10;Expectations:&#10;Rewards:&#10;Deadline:">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </JFXTextArea>
                <JFXComboBox id="levelChoiceBox" labelFloat="true" prefHeight="40.0" prefWidth="500.0"
                             promptText="Difficulty"/>
                <HBox alignment="CENTER" spacing="150.0">
                    <children>
                        <JFXButton fx:id="createButton" buttonType="RAISED" onAction="#handleCreateButtonAction"
                                   prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: blue;" text="Create"
                                   textFill="WHITE">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </JFXButton>
                        <JFXButton fx:id="cancelButton" buttonType="RAISED" onAction="#handleCancelButtonAction"
                                   prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: blue;" text="Cancel"
                                   textFill="WHITE">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </JFXButton>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
            </padding>
        </VBox>
    </items>
</SplitPane>
